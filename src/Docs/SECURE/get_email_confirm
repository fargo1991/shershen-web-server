GET /email/confirm

{
    confirm_token : String
}

// confirm-token - это jwt-токен, в котором зашифрованы userId.userRole.secret

Status : 308 OK // Редиректим на страницу пользователя, гасим confirm_token.
Status : 400 // Запрос неверный, гасим confirm_token
Status : 500 // Что-то пошло не так, гасим confirm_token